# This is the makefile for the front end of our C compiler. 

CC = g++
CFLAGS = -Wall
FLEX = flex
#BISON = bison
LIBS = -L/usr/local/lib -lfl
OBJS = lex.yy.o symbolTableEntry.o symbolTable.o #cParser.tab.o

main.o: $(OBJS)
	$(CC) -o $@ $(OBJS) 

lex.yy.c: calc.l 
	$(FLEX) $<

#cParser.tab.c: cParser.y
#	$(BISON) -d $<

symbolTableEntry.cpp: symbolTableEntry.h
	$(CC) symbolTableEntry.cpp $(CFLAGS) -o $@

symbolTable.cpp: symbolTable.h
	$(CC) symbolTable.cpp $(CFLAGS) -o $@

clean:
	-rm -f lex.yy.* *.o lexer
